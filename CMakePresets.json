{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": ".cfg",
			"hidden": true,
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_COLOR_DIAGNOSTICS": {
					"type": "BOOL",
					"value": "ON"
				},
				"CMAKE_MESSAGE_LOG_LEVEL": {
					"type": "STRING",
					"value": "VERBOSE"
				},
				"CMAKE_VERBOSE_MAKEFILE": {
					"type": "BOOL",
					"value": "OFF"
				},
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Debug"
				},
				"Catch2_VERSION": {
					"type": "STRING",
					"value": "v3.2.0"
				},
				"SF_BUILD_QT": {
					"type": "BOOL",
					"value": "OFF"
				},
				"SF_BUILD_TESTING": {
					"type": "BOOL",
					"value": "OFF"
				},
				"SF_CROSS_WINDOWS": {
					"type": "BOOL",
					"value": "OFF"
				},
				"Vulkan_INCLUDE_DIR": {
					"type": "STRING",
					"value": "${sourceDir}"
				}
			}
		},
		{
			"name": ".cfg-lnx",
			"inherits": [
				".cfg"
			],
			"hidden": true,
			"displayName": "Debug Linux Template",
			"description": "Debug config Linux template.",
			"environment": {
				"PATH": "${sourceDir}/cmake/lib/bin:$penv{PATH}"
			},
			"cacheVariables": {
				"SF_BUILD_TESTING": {
					"type": "BOOL",
					"value": "ON"
				},
				"SF_CROSS_WINDOWS": {
					"type": "BOOL",
					"value": "OFF"
				}
			}
		},
		{
			"name": ".cfg-win",
			"inherits": [
				".cfg"
			],
			"hidden": true,
			"displayName": "Debug Windows Template",
			"description": "Debug config Windows template.",
			"cacheVariables": {
				"SF_BUILD_TESTING": {
					"type": "BOOL",
					"value": "ON"
				},
				"SF_CROSS_WINDOWS": {
					"type": "BOOL",
					"value": "ON"
				}
			},
			"environment": {
				"PATH": "${sourceDir}/cmake/lib/bin:$penv{PATH}"
			}
		},
		{
			"name": "gnu-debug",
			"hidden": false,
			"displayName": "Dbg GNU Compiler",
			"description": "Debug config GNU compiler on Linux.",
			"inherits": [
				".cfg-lnx"
			],
			"binaryDir": "${sourceDir}/cmake-build/gnu-debug"
		},
		{
			"name": "gnu-coverage",
			"hidden": false,
			"displayName": "Coverage GNU Compiler",
			"description": "Coverage config GNU compiler on Linux.",
			"inherits": [
				".cfg-lnx"
			],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Coverage"
				}
			},
			"binaryDir": "${sourceDir}/cmake-build/gnu-coverage"
		},
		{
			"name": "gw-coverage",
			"hidden": false,
			"displayName": "Coverage GW Compiler",
			"description": "Coverage config GW compiler on Linux.",
			"inherits": [
				".cfg-win"
			],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Coverage"
				}
			},
			"binaryDir": "${sourceDir}/cmake-build/gw-coverage"
		},
		{
			"name": "gw-debug",
			"hidden": false,
			"displayName": "Dbg GW Compiler",
			"description": "Debug config for cross Windows GW compiler on Linux.",
			"inherits": [
				".cfg-win"
			],
			"binaryDir": "${sourceDir}/cmake-build/gw-debug"
		},
		{
			"name": "gnu-release",
			"hidden": false,
			"displayName": "Release GNU Compiler",
			"description": "Release config GNU compiler on Linux.",
			"inherits": [
				".cfg-lnx"
			],
			"binaryDir": "${sourceDir}/cmake-build/gnu-release"
		},
		{
			"name": "gw-release",
			"hidden": false,
			"displayName": "Release GW Compiler",
			"description": "Release config for cross Windows GW compiler on Linux.",
			"inherits": [
				".cfg-win"
			],
			"binaryDir": "${sourceDir}/cmake-build/gw-release"
		}
	],
	"buildPresets": [
		{
			"name": ".build",
			"hidden": true,
			"cleanFirst": false,
			"verbose": false
		},
		{
			"name": ".lnx-only",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "gnu-debug",
			"hidden": false,
			"displayName": "Dbg Build GNU Compiler",
			"description": "Debug build with GNU compiler on Linux.",
			"configurePreset": "gnu-debug",
			"inherits": [
				".build",
				".lnx-only"
			]
		},
		{
			"name": "gnu-coverage",
			"hidden": false,
			"displayName": "Coverage Dbg Build GNU Compiler",
			"description": "Debug build with GNU compiler on Linux using Coverage.",
			"configurePreset": "gnu-coverage",
			"inherits": [
				".build",
				".lnx-only"
			],
			"targets": [
				"t_devops-trial-test"
			]
		},
		{
			"name": "gw-coverage",
			"hidden": false,
			"displayName": "Coverage Dbg Build GW Compiler",
			"description": "Debug build with GW compiler on Linux using Coverage.",
			"configurePreset": "gw-coverage",
			"inherits": [
				".build",
				".lnx-only"
			],
			"targets": [
				"t_devops-trial-test"
			]
		},
		{
			"name": "gw-debug",
			"hidden": false,
			"displayName": "Dbg Build GW Compiler",
			"description": "Debug build GW Windows cross compiler on Linux.",
			"configurePreset": "gw-debug",
			"inherits": [
				".build",
				".lnx-only"
			]
		},
		{
			"name": "gnu-release",
			"hidden": false,
			"displayName": "Release Build GNU Compiler",
			"description": "Release build with GNU compiler on Linux.",
			"configurePreset": "gnu-release",
			"inherits": [
				".build",
				".lnx-only"
			]
		},
		{
			"name": "gw-release",
			"hidden": false,
			"displayName": "Release Build GW Compiler",
			"description": "Release build GW Windows cross compiler on Linux.",
			"configurePreset": "gw-release",
			"inherits": [
				".build",
				".lnx-only"
			]
		}
	],
	"testPresets": [
		{
			"name": ".test",
			"hidden": true,
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": true
			}
		},
		{
			"name": ".lnx-only",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "gnu-debug",
			"hidden": false,
			"displayName": "Dbg Test GNU",
			"description": "Debug with GNU compiler on Linux.",
			"inherits": [
				".test",
				".lnx-only"
			],
			"configurePreset": "gnu-debug"
		},
		{
			"name": "gnu-coverage",
			"hidden": false,
			"displayName": "Coverage Test GNU",
			"description": "Coverage with GNU compiler on Linux.",
			"inherits": [
				".test",
				".lnx-only"
			],
			"configurePreset": "gnu-coverage"
		},
		{
			"name": "gw-debug",
			"hidden": false,
			"displayName": "Dbg Test GW",
			"description": "Debug test GW Windows cross compiler on Linux.",
			"inherits": [
				".test",
				".lnx-only"
			],
			"configurePreset": "gw-debug"
		},
		{
			"name": "gw-coverage",
			"hidden": false,
			"displayName": "Coverage Test GW",
			"description": "Coverage with GW compiler on Linux.",
			"inherits": [
				".test",
				".lnx-only"
			],
			"configurePreset": "gw-coverage"
		},
		{
			"name": "gnu-release",
			"hidden": false,
			"displayName": "Release Test GNU",
			"description": "Release with GNU compiler on Linux.",
			"inherits": [
				".test",
				".lnx-only"
			],
			"configurePreset": "gnu-release"
		},
		{
			"name": "gw-release",
			"hidden": false,
			"displayName": "Release Test GW",
			"description": "Release test GW Windows cross compiler on Linux.",
			"inherits": [
				".test",
				".lnx-only"
			],
			"configurePreset": "gw-release"
		}
	],
	"packagePresets": [
		{
			"hidden": true,
			"name": ".pack",
			"displayName": "Package Template",
			"description": "Template for packaging.",
			"packageDirectory": "${sourceDir}/bin/pkg",
			"output": {
				"verbose": false,
				"debug": false
			}
		},
		{
			"name": ".lnx-only",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "gnu-debug",
			"hidden": false,
			"displayName": "GNU Deb Pack Dbg",
			"description": "GNU Debian package debug.",
			"inherits": [
				".pack",
				".lnx-only"
			],
			"configurePreset": "gnu-debug",
			"packageDirectory": "${sourceDir}/bin/pkg",
			"generators": [
				"DEB",
				"RPM"
			]
		},
		{
			"name": "gw-debug",
			"hidden": false,
			"inherits": [
				".pack",
				".lnx-only"
			],
			"displayName": "GW ZIP + NSIS Pack Dbg",
			"description": "GW ZIP + NSIS package debug.",
			"configurePreset": "gw-debug",
			"packageDirectory": "${sourceDir}/bin/pkg",
			"generators": [
				"NSIS64",
				"ZIP"
			]
		},
		{
			"name": "gnu-release",
			"hidden": false,
			"displayName": "GNU Deb Pack Release",
			"description": "GNU Debian package release.",
			"inherits": [
				".pack",
				".lnx-only"
			],
			"configurePreset": "gnu-release",
			"packageDirectory": "${sourceDir}/bin/pkg",
			"generators": [
				"DEB",
				"RPM"
			]
		},
		{
			"name": "gw-release",
			"hidden": false,
			"inherits": [
				".pack",
				".lnx-only"
			],
			"displayName": "GW ZIP + NSIS Pack Release",
			"description": "GW ZIP + NSIS package release.",
			"configurePreset": "gw-release",
			"packageDirectory": "${sourceDir}/bin/pkg",
			"generators": [
				"NSIS64",
				"ZIP"
			]
		}
	],
	"workflowPresets": [
		{
			"name": "gnu-debug",
			"displayName": "GNU Dbg Workflow",
			"description": "GNU debug workflow.",
			"steps": [
				{
					"type": "configure",
					"name": "gnu-debug"
				},
				{
					"type": "build",
					"name": "gnu-debug"
				},
				{
					"type": "test",
					"name": "gnu-debug"
				},
				{
					"type": "package",
					"name": "gnu-debug"
				}
			]
		},
		{
			"name": "gnu-coverage",
			"displayName": "GNU Coverage Workflow",
			"description": "GNU coverage workflow.",
			"steps": [
				{
					"type": "configure",
					"name": "gnu-coverage"
				},
				{
					"type": "build",
					"name": "gnu-coverage"
				},
				{
					"type": "test",
					"name": "gnu-coverage"
				}
			]
		},
		{
			"name": "gw-coverage",
			"displayName": "GW Coverage Workflow",
			"description": "GW coverage workflow.",
			"steps": [
				{
					"type": "configure",
					"name": "gw-coverage"
				},
				{
					"type": "build",
					"name": "gw-coverage"
				},
				{
					"type": "test",
					"name": "gw-coverage"
				}
			]
		},
		{
			"name": "gw-debug",
			"displayName": "GW Dbg Workflow",
			"description": "GW debug workflow.",
			"steps": [
				{
					"type": "configure",
					"name": "gw-debug"
				},
				{
					"type": "build",
					"name": "gw-debug"
				},
				{
					"type": "test",
					"name": "gw-debug"
				},
				{
					"type": "package",
					"name": "gw-debug"
				}
			]
		},
		{
			"name": "gnu-release",
			"displayName": "GNU Release Workflow",
			"description": "GNU release workflow.",
			"steps": [
				{
					"type": "configure",
					"name": "gnu-release"
				},
				{
					"type": "build",
					"name": "gnu-release"
				},
				{
					"type": "test",
					"name": "gnu-release"
				},
				{
					"type": "package",
					"name": "gnu-release"
				}
			]
		},
		{
			"name": "gw-release",
			"displayName": "GW Release Workflow",
			"description": "GW release workflow.",
			"steps": [
				{
					"type": "configure",
					"name": "gw-release"
				},
				{
					"type": "build",
					"name": "gw-release"
				},
				{
					"type": "test",
					"name": "gw-release"
				},
				{
					"type": "package",
					"name": "gw-release"
				}
			]
		}
	]
}
