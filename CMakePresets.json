	"configurePresets": [
		{
			"name": ".cfg",
			"hidden": true,
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_COLOR_DIAGNOSTICS": {
					"type": "BOOL",
					"value": "ON"
				},
				"CMAKE_MESSAGE_LOG_LEVEL": {
					"type": "STRING",
					"value": "VERBOSE"
				},
				"CMAKE_VERBOSE_MAKEFILE": {
					"type": "BOOL",
					"value": "OFF"
				},
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Debug"
				},
				"SF_BUILD_QT": {
					"type": "BOOL",
					"value": "OFF"
				},
				"SF_BUILD_TESTING": {
					"type": "BOOL",
					"value": "OFF"
				},
				"SF_CROSS_WINDOWS": {
					"type": "BOOL",
					"value": "OFF"
				},
				"Vulkan_INCLUDE_DIR": {
					"type": "STRING",
					"value": "${sourceDir}"
				}
			}
		},
		{
			"name": ".lnx-only",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": ".w64-only",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": ".qt",
			"hidden": true,
			"cacheVariables": {
				"SF_BUILD_QT": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		},
		{
			"name": ".cfg-lnx",
			"inherits": [
				".lnx-only",
				".qt",
				".cfg"
			],
			"hidden": true,
			"displayName": "Debug Linux Template",
			"description": "Debug config Linux template.",
			"environment": {
				"PATH": "${sourceDir}/cmake/lib/bin:$penv{PATH}"
			},
			"cacheVariables": {
				"SF_BUILD_TESTING": {
					"type": "BOOL",
					"value": "ON"
				},
				"SF_CROSS_WINDOWS": {
					"type": "BOOL",
					"value": "OFF"
