{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 22,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": ".cfg",
			"hidden": true,
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_COLOR_DIAGNOSTICS": {
					"type": "BOOL",
					"value": "ON"
				},
				"CMAKE_MESSAGE_LOG_LEVEL": {
					"type": "STRING",
					"value": "VERBOSE"
				},
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "Debug"
				},
				"Catch2_VERSION": {
					"type": "STRING",
					"value": "v3.2.0"
				},
				"SF_BUILD_QT": {
					"type": "BOOL",
					"value": "OFF"
				},
				"SF_BUILD_TESTING": {
					"type": "BOOL",
					"value": "OFF"
				},
				"SF_CROSS_WINDOWS": {
					"type": "BOOL",
					"value": "OFF"
				},
				"Vulkan_INCLUDE_DIR": {
					"type": "STRING",
					"value": "${sourceDir}"
				}
			}
		},
		{
			"name": ".cfg-lnx",
			"inherits": [".cfg"],
			"hidden": true,
			"displayName": "Debug Linux Template",
			"description": "Debug config Linux template.",
			"environment": {
				"PATH": "$env{HOME}/lib/clion/bin/ninja/linux:$penv{PATH}"
			},
			"cacheVariables": {
				"SF_BUILD_TESTING": {
					"type": "BOOL",
					"value": "ON"
				},
				"SF_CROSS_WINDOWS": {
					"type": "BOOL",
					"value": "OFF"
				}
			}
		},
		{
			"name": ".cfg-win",
			"inherits": [".cfg"],
			"hidden": true,
			"displayName": "Debug Windows Template",
			"description": "Debug config Windows template.",
			"cacheVariables": {
				"SF_BUILD_TESTING": {
					"type": "BOOL",
					"value": "OFF"
				},
				"SF_CROSS_WINDOWS": {
					"type": "BOOL",
					"value": "ON"
				}
			},
			"environment": {
				"PATH": "${sourceDir}\\cmake\\lib\\bin;$penv{PATH}"
			}
		},
		{
			"name": "gnu-amd64-debug",
			"hidden": false,
			"displayName": "Debug GNU Compiler on Linux",
			"description": "Debug config GNU compiler on Linux",
			"inherits": [".cfg-lnx"],
			"binaryDir": "${sourceDir}/cmake-build/debug-gnu"
		},
		{
			"name": "gw-amd64-debug",
			"hidden": false,
			"displayName": "Debug GW Compiler on Linux",
			"description": "Debug config for cross Windows GW compiler on Linux.",
			"inherits": [".cfg-win"],
			"binaryDir": "${sourceDir}/cmake-build/debug-gw"
		},
		{
			"name": "mingw-amd64-debug",
			"hidden": false,
			"displayName": "Debug Linux MinGW Compiler on Windows",
			"description": "Debug config for cross Windows MinGW compiler on Windows.",
			"inherits": [".cfg-win"],
			"generator": "CodeBlocks - MinGW Makefiles",
			"binaryDir": "${sourceDir}/cmake-build/debug-mingw"
		},
		{
			"name": "msvc-amd64-debug",
			"hidden": false,
			"displayName": "Debug Linux MinGW Compiler on Windows",
			"description": "Debug config for cross Windows MinGW compiler on Windows.",
			"inherits": [".cfg-win"],
			"generator": "CodeBlocks - NMake Makefiles",
			"binaryDir": "${sourceDir}/cmake-build/debug-msvc"
		}
	],
	"buildPresets": [
		{
			"name": ".build",
			"hidden": true,
			"cleanFirst": false,
			"verbose": false,
			"jobs": 4
		},
		{
			"name": "gnu-amd64-debug",
			"hidden": false,
			"displayName": "Debug build Linux GNU Compiler",
			"description": "Debug build with GNU compiler on Linux.",
			"configurePreset": "gnu-amd64-debug",
			"inherits": [".build"],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			},
			"targets": [
				"hello-world"
			]
		},
		{
			"name": "gw-amd64-debug",
			"hidden": false,
			"displayName": "Debug build Linux MinGW Compiler",
			"description": "Debug build MinGW Windows cross compiler on Linux.",
			"configurePreset": "gw-amd64-debug",
			"inherits": [".build"],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			},
			"targets": [
				"hello-world"
			]
		},
		{
			"name": "mingw-amd64-debug",
			"hidden": false,
			"displayName": "Debug build Windows MinGW Compiler",
			"description": "Debug build for MinGW compiler on Windows.",
			"configurePreset": "mingw-amd64-debug",
			"inherits": [".build"],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"targets": [
				"hello-world"
			]
		},
		{
			"name": "msvc-amd64-debug",
			"hidden": false,
			"displayName": "Debug build Windows MSVC Compiler",
			"description": "Debug build for MSVC compiler on Windows.",
			"configurePreset": "msvc-amd64-debug",
			"inherits": [".build"],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"targets": [
				"hello-world"
			]
		}
	],
	"testPresets": [
		{
			"name": "gnu-amd64-debug",
			"hidden": false,
			"configurePreset": "gnu-amd64-debug",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": true
			}
		},
		{
			"name": "gw-amd64-debug",
			"hidden": false,
			"configurePreset": "gw-amd64-debug",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": true
			}
		},
		{
			"name": "mingw-amd64-debug",
			"hidden": false,
			"configurePreset": "mingw-amd64-debug",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": true
			}
		},
		{
			"name": "msvc-amd64-debug",
			"hidden": false,
			"configurePreset": "msvc-amd64-debug",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": true
			}
		}
	]
}
